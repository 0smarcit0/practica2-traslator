---
import fs from 'fs';

let data1 = fs.readFileSync("public/glifos.txt","utf-8");
let data2 = fs.readFileSync("public/salidaglifos.txt","utf-8");

---
<!-- Below is your "component template." It's just HTML, but with
    some magic sprinkled in to help you build great templates. -->
<html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Live TrΛslΛtΩr</title>
  </head>
      
  <body>
    <main>
      <header >
        <h1></h1>
      </header>
      <section class = "principal">
        <div class="contenedor">
          
          <div class="entry">
            <legend>Numero entero</legend>
            <textarea name="input" id="1" class="input" >{data1}  </textarea>
          </div>
          
          <div class="entry">
            <legend>Glifo/palabra</legend>
            <textarea name="output"  id="2" class="output" disabled >{data2} </textarea>
          </div>
        </div>
          <div>
            <div class="entry">
            <legend>Glifo</legend>
            <textarea name="outputG"  id="3" class="outputG" disabled >{data2} </textarea>
          </div>
        </div>
          
        
        
        
      </section>
    
    </main>
  </body>

  <script src="/src/scripts/app.js"></script>

</html>
<style>
  h1 {
    color: orange;
    font-family: Arial, Helvetica, sans-serif;
    text-shadow: 0rem 0rem 0.4rem orange;
  }
  h1::before{
    content: "Live";
    color: black;
    text-shadow: 0rem 0rem 0.2rem black;
    background-color: orange;
  }
  h1::after{
    content: "TrΛslΛtΩr";
  }
  body{
    padding: 1rem;
    display: flex;
    align-items: center;
    background: #000000;
    
    justify-content: center;
    

  }
  textarea{
    resize: none;
    height: 10rem;
    width: 20rem;
    border-radius: 1rem;
    border: 0.2rem solid orange;
    background-color: black;
    color: whitesmoke;
    margin: 0%;
    font-family: Arial, Helvetica, sans-serif;
    padding: 1rem;
  }


  header{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 4rem;
  }
  div{
    color: whitesmoke;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-bottom: 1rem;
    
  }
  legend{
    color: orange;
    margin-bottom: 0.3rem;
    font-family: Arial, Helvetica, sans-serif;
    font-size: large;
    font-weight: bold;
    text-transform: uppercase;
  }
  fieldset{
    border-radius: 1rem;
  }
  .contenedor{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    padding: 1rem;

   
  }
  .entry{
    display: flex;
    align-items: self-start;
    justify-content: center;
    padding: 1rem;
  }
</style>